#!/bin/sh
set -e

. /usr/share/debconf/confmodule

case "$1" in
  configure)
    # get KOLIBRI_HOME from kolibri installer package:
    source /etc/default/kolibri
    echo "
location /static {
    alias  $KOLIBRI_HOME/static;
}
 location /content {
    alias   $KOLIBRI_HOME/content/;
}
"> $KOLIBRI_HOME/nginx.conf

    echo "include $KOLIBRI_HOME/nginx.conf;" > /etc/kolibri/nginx.d/099-user.conf

    # service kolibri-network-server reload >/dev/null || true
    ;;
  abort-upgrade|abort-remove|abort-deconfigure)
    ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
    ;;
esac

#DEBHELPER#


exit 0
